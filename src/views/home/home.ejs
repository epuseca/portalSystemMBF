<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portal network</title>
    <link rel="stylesheet" href="/css/home/topnav.css">
    <link rel="stylesheet" href="/css/home/sidenav.css">
    <link rel="stylesheet" href="/css/home/topnav_slideshow.css">
    <link rel="stylesheet" href="/css/home/login.css">
    <link rel="stylesheet" href="/css/home/list_system.css">
    <link rel="stylesheet" href="/css/home/footer.css">
    <script src="/scripts/sidebar.js"></script>
    <script src="/scripts/navbar.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <!-- topbar -->
    <nav class="navbar">
        <div class="logo">
            <img alt="Logo" src="/images/logo.png">
        </div>
        <div class="menu-left">
            <a class="active_navbar " href="#home">Trang chủ</a>
            <!-- Giới thiệu -->
            <div class="dropdown">
                <a href="#introduce" class="dropbtn">Giới thiệu
                    <i class="fa fa-caret-down"></i>
                </a>
                <div class="dropdown-content">
                    <a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    <a href="#">Link 3</a>
                </div>
            </div>
            <!-- Tin tức -->
            <div class="dropdown">
                <a href="#news" class="dropbtn">Tin tức
                    <i class="fa fa-caret-down"></i>
                </a>
                <div class="dropdown-content">
                    <a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    <a href="#">Link 3</a>
                </div>
            </div>
            <!-- Liên hệ -->
            <div class="dropdown">
                <a href="#contact" class="dropbtn">Liên hệ
                    <i class="fa fa-caret-down"></i>
                </a>
                <div class="dropdown-content">
                    <a href="#">Link 1</a>
                    <a href="#">Link 2</a>
                    <a href="#">Link 3</a>
                </div>
            </div>
            <a style="color: #2b7dcf; font-size: 16px;
    font-weight: bold;" href="#search"><i class="fa fa-fw fa-search"></i>Tìm kiếm</a>
        </div>

        <!-- <input class="search_info" type="text" placeholder="Search.."> -->
        <div class="menu-right">

            <% if (isLoggedIn) { %>
                <!-- Nếu đã đăng nhập, hiển thị link Đăng xuất -->
                <a href="/logout" style="color: #2b7dcf; font-size: 17px; font-weight: bold;">Đăng xuất</a>
                <% } else { %>
                    <!-- Nếu chưa đăng nhập, hiển thị nút đăng nhập (mở modal) -->
                    <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">
                        <a style="color: #2b7dcf; font-size: 17px; font-weight: bold;" href="#login">Đăng nhập</a>
                    </button>
                    <% } %>
                        <div id="id01" class="modal">

                            <form class="modal-content animate" action="/login" method="POST">
                                <div class="imgcontainer">
                                    <span onclick="document.getElementById('id01').style.display='none'" class="close"
                                        title="Close Modal">&times;</span>
                                    <img src="/images/Su-menh.jpg" alt="Avatar" class="avatar">
                                </div>

                                <div class="container">
                                    <label style="color: black;" for="username"><b>Username</b></label>
                                    <input type="text_uname" placeholder="Enter Username" name="username" required>

                                    <label style="color: black;" for="password"><b>Password</b></label>
                                    <input type="password" placeholder="Enter Password" name="password" required>

                                    <button style="background-color: #2b7dcf;" type="submit">Login</button>
                                    <label style="color: black;">
                                        <input type="checkbox" checked="checked" name="remember"> Remember me
                                    </label>
                                </div>

                                <div class="container" style="background-color:#f1f1f1">
                                    <button type="button" onclick="document.getElementById('id01').style.display='none'"
                                        class="cancelbtn">Cancel</button>
                                    <span class="psw"> <a style="color: black;" href="#">Forgot password?</a></span>
                                </div>
                            </form>
                        </div>
                        <div class="hamburger" onclick="toggleMobileMenu()">
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
        </div>



    </nav>
    <div id="mobileMenu" class="mobile-menu">
        <a href="#" class="closebtn" onclick="toggleMobileMenu()">&times;</a>
        <a href="#">Home</a>
        <a href="#">Services</a>
        <a href="#">About</a>
        <a href="#" class="cta-button">Contact Us</a>
    </div>

    <!-- sidenav -->
    <div class="row">
        <div class="left" style="background-color:#bbb;">
            <h2>Tag nghiệp vụ</h2>
            <input type="text" id="mySearch" onkeyup="myFunction()" placeholder="Search.." title="Type in a category">
            <ul id="myMenu">
                <li><a href="#">Hỗ trợ tư vấn</a></li>
                <li><a href="#">Giải pháp và dịch vụ viễn thông</a></li>
                <li><a href="#">Sản xuất</a></li>
                <li><a href="#">...</a></li>
            </ul>
        </div>

        <div class="right" style="background-color:#ddd;">

            <!-- Slideshow container -->
            <div class="slideshow-container">

                <!-- Full-width images with number and caption text -->
                <div class="mySlides fade">
                    <div class="numbertext">1 / 3</div>
                    <img class="picture_setting" src="/images/b1.png">
                    <div class="text">Hệ thống 1</div>
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">2 / 3</div>
                    <img class="picture_setting" src="/images/Su-menh.jpg">
                    <div class="text">Hệ thống 2</div>
                </div>

                <div class="mySlides fade">
                    <div class="numbertext">3 / 3</div>
                    <img class="picture_setting" src="/images/Tam-nhin.jpg">
                    <div class="text">Hệ thống 3</div>
                </div>

                <!-- Next and previous buttons -->
                <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                <a class="next" onclick="plusSlides(1)">&#10095;</a>
            </div>

            <!-- The dots/circles can click -->
            <div style="text-align:right;margin-right: 15px;margin-top: 5px;">
                <span class="dot" onclick="currentSlide(1)"></span>
                <span class="dot" onclick="currentSlide(2)"></span>
                <span class="dot" onclick="currentSlide(3)"></span>
            </div>
            <!-- test list user -->
            <h2 class="title-hethong">Hệ thống</h2>

            <% if(listSystems && listSystems.length> 0) { %>
                <!-- Dùng Flexbox, CSS tự động xuống dòng sau 3 card -->
                <div class="row_card">
                    <% listSystems.forEach(function(system) { %>
                        <div class="column">
                            <div class="card">
                                <!-- Nếu hệ thống có ảnh riêng, bạn có thể dùng system.image -->
                                <img src="<%= system.image || '/images/Tam-nhin.jpg' %>" alt="Header Image"
                                    class="header-image">
                                <h3>Hệ thống: <%= system.name %>
                                </h3>
                                <p class="text-p">
                                    Tài liệu hướng dẫn:
                                    <a class="link-tailieu" href="<%= system.linkInstruct %>">
                                        <%= system.linkInstruct %>
                                    </a>
                                </p>
                                <p class="text-p">
                                    Đơn vị chủ quản: <%= system.managingUnit %>
                                </p>
                                <p class="text-p">
                                    Đầu mối quản trị: <%= system.contactPoint %>
                                </p>
                                <br>
                                <a href="<%= system.linkAccess %>" class="link-system">
                                    Link truy cập: <%= system.linkAccess %>
                                </a>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <p>Không có hệ thống nào.</p>
                    <% } %>

                        <div class="pagination">
                            <a href="#">&laquo;</a>
                            <a href="#">1</a>
                            <a class="active" href="#">2</a>
                            <a href="#">3</a>
                            <a href="#">4</a>
                            <a href="#">5</a>
                            <a href="#">6</a>
                            <a href="#">&raquo;</a>
                        </div>
        </div>
    </div>
    <!-- footer -->
    <footer>
        <div class="container">
            <div class="footer-sections">
                <div class="footer-section">
                    <h3>GIỚI THIỆU</h3>
                    <ul>
                        <li><a href="#">Giới thiệu chung</a></li>
                        <li><a href="#">Dấu mốc phát triển</a></li>
                        <li><a href="#">Tầm nhìn sứ mệnh</a></li>
                        <li><a href="#">Cơ cấu tổ chức</a></li>
                        <li><a href="#">Đối tác</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>TIN TỨC</h3>
                    <ul>
                        <li><a href="#">Tin nội bộ</a></li>
                        <li><a href="#">Tin trong ngành</a></li>
                        <li><a href="#">Hoạt động đoàn thể</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>DỊCH VỤ</h3>
                    <ul>
                        <li><a href="#">Giá trị gia tăng</a></li>
                        <li><a href="#">Hạ tầng viễn thông</a></li>
                        <li><a href="#">Chăm sóc khách hàng</a></li>
                    </ul>
                </div>
                <div class="footer-section contact-info">
                    <h3>LIÊN HỆ</h3>
                    <p>
                        <span class="address-icon"></span>
                        115 Trần Duy Hưng, Trung Hòa, Cầu Giấy, Hà Nội
                    </p>
                    <p>
                        <span class="email-icon"></span>
                        info@mobifoneservice.com.vn
                    </p>
                    <p>
                        <span class="phone-icon"></span>
                        +84 12 23 34 45
                    </p>
                    <p>
                        <span class="hotline-icon"></span>
                        Hotline Cổ Đông liên hệ
                    </p>
                </div>
            </div>
            <div class="footer-bottom">
                <p>©2015 MOBIFONE SERVICES, All Right Reserved.</p>
                <div class="social-icons">
                    <a href="#"></a>
                    <a href="#"></a>
                    <a href="#"></a>
                </div>
            </div>
        </div>
    </footer>
</body>

</html>