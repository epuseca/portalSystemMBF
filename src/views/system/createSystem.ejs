    <div class="container">
        <h2>Create New System</h2>
        <form id="createSystemForm">
            <label for="name">System Name</label>
            <input type="text" id="name" name="name" required>

            <label for="idSystem">System ID</label>
            <input type="text" id="idSystem" name="idSystem" required>

            <label for="image">Image URL</label>
            <input type="text" id="image" name="image">

            <label for="description">Description</label>
            <textarea id="description" name="description"></textarea>

            <label for="tagNv">Tag NV</label>
            <input type="text" id="tagNv" name="tagNv">

            <label for="linkAccess">Access Link</label>
            <input type="text" id="linkAccess" name="linkAccess">

            <label for="linkInstruct">Instruction Link</label>
            <input type="text" id="linkInstruct" name="linkInstruct">

            <label for="managingUnit">Managing Unit</label>
            <input type="text" id="managingUnit" name="managingUnit">

            <label for="contactPoint">Contact Point</label>
            <input type="text" id="contactPoint" name="contactPoint">

            <input type="submit" value="Create System">
        </form>
    </div>

    <script>
        document.getElementById("createSystemForm").addEventListener("submit", async function (event) {
            event.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData);

            try {
                const response = await fetch("/system", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    alert("System created successfully!");
                    this.reset();
                } else {
                    alert("Failed to create system.");
                }
            } catch (error) {
                console.error("Error:", error);
                alert("An error occurred while creating the system.");
            }
        });
    </script>
